<h1>Listing all comments</h1>

<% if current_user %>
	<p><%= link_to 'new comment', new_comment_path %></p>
<% end %>

<ul>
	<% @comments.each do |comment| %>
		<li>
			<%= link_to comment.title, comment_path(comment) %>
			<!-- test -->
			<% if current_user == post.user %>
			 | 
			<%= link_to 'edit', edit_comment_path(comment) %> |
			<%= link_to 'delete', comment_path(comment), method: :delete, data: {confirm: "Really delete this comment?"} %>
			<% end %>
			
		</li>
	<% end %>
</ul>
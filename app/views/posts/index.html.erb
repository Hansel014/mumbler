<div class="postsbody">

	<h1>Lastest Posts!</h1>
	
		
			<% @posts.reverse.each do |post| %>
			<ul>
			<div class="usericon">	<%= image_tag post.user.image.url(:small) %></div>
					<li class="poststyling">
						
						
						<div class="posttitle">
							
						<%= link_to post.title, post_path(post) %> 
					
						<span id ="timecreated">Posted by: <%= post.user.name %> on <%= post.created_at.strftime("%b. %d %Y") %> </span>

						</div>
						<br>
						<div class="postbodystyling">
						<%= post.body[0...1000] %> ...
						</div>
						
					
						<div id="spaceme"></div>
						<p class="readmore"><%= link_to "Read More...", post_path(post) %></p>
					</li>
						</ul>
				<% end %>

	
				

				</div>







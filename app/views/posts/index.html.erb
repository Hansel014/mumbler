<h1>Listing all posts</h1>

<% if current_user %>
	<p><%= link_to 'new post', new_post_path %></p>
<% end %>

<ul>
	<% @posts.each do |post| %>
		<li>
			<%= link_to post.title, post_path(post) %>
			<!-- test -->
			<% if current_user == post.user %>
			 | 
			<%= link_to 'edit', edit_post_path(post) %> |
			<%= link_to 'delete', post_path(post), method: :delete, data: {confirm: "Really delete this post?"} %>
			<% end %>
			<%= display_status(post) %>
		</li>
	<% end %>
</ul>
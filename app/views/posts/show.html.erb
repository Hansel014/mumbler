<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<%= link_to 'new post', new_post_path %> 

 

<h3>Comment </h3>
<%= render 'comments/commentform' %>
<br>

<h3>Post Comments</h3>
<% current_post.comments.last(10).reverse.each do |c| %>
	
	<p><%= c.body %></p>

<% end %>



